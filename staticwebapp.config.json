
{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/.github/*",
      "/*.{css,js,png,jpg,jpeg,gif,ico,svg,webp}",
      "/images/*",
      "/assets/*"
    ]
  },
  "routes": [
    { "route": "/styles.css", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "route": "/script.js",  "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "route": "/Icon.png",   "headers": { "Cache-Control": "public, max-age=31536000, immutable" } }
  ],
  "responseOverrides": {
    "404": { "rewrite": "/index.html" }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self'; font-src 'self' data:; frame-ancestors 'none'; base-uri 'self'",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "geolocation=(), camera=(), microphone=(), payment=()"
  },
  "mimeTypes": {
    "svg": "image/svg+xml"
  }
}
